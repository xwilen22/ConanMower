<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.ManualFragment"
    android:background="@color/background">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/distance_medium"
        android:textColor="@color/white"
        android:text="@string/manual"
        android:textSize="@dimen/text_header"
        android:textAllCaps="true"/>

    <Button
        android:id="@+id/connectBluetoothBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/auto_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/manual_button"
        android:layout_width="0dp"
        android:text="@string/auto"
        android:layout_height="60dp"
        android:textSize="@dimen/text_button"
        android:layout_margin="@dimen/padding_small">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/manual_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/auto_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/manual"
        android:textColor="@color/white"
        android:textSize="@dimen/text_button"
        android:backgroundTint="@color/orange"
        android:layout_margin="@dimen/padding_small">

    </com.google.android.material.button.MaterialButton>

</androidx.constraintlayout.widget.ConstraintLayout>